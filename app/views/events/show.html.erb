<div class="wrapper">

 <div class="sub_header">
  <h1>予約の詳細</h1>
 </div>

  <p id="notice"><%= notice %></p>

  <p>
    <strong>名前:</strong>
    <%= @event.title %>
  </p>

  <p>
    <strong>備考:</strong>
    <%= @event.body %>
  </p>

  <p>
    <strong>開始:</strong>
    <%= l @event.start_date %>
  </p>

  <p>
    <strong>終了:</strong>
    <%= l @event.end_date %>
  </p>

  <%= link_to '編集', edit_event_path(@event), {class: "edit_show_btn"} %> |
  <%= link_to 'トップ画面へ', events_path, {class: "top_btn"} %>

</div>